{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Eliza IoTeX Plugin",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "start",
                "--character=characters/iotexsupport.character.json",
                "--debug"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/packages/plugin-iotex/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "restart": true,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}